{
    "version": 2,
    "controller": {},
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "game",
                    "roles": [
                        {
                            "name": "server",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },

                                    "cache": true
                                }
                            ]
                        },
                        {
                            "name": "client",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": false,
                                        "publish": false,
                                        "subscribe": true
                                    },
                                    "disclose":{
                                        "caller": true,
                                        "publisher": true
                                    },

                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "universal",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "rawsocket": {
                    },
                    "websocket": {
                        "ws_for_client": {
                            "type": "websocket",
                            "auth":{
                                "wampcra":{
                                    "type":"dynamic",
                                    "authenticator": "auth"
                                }
                            }

                        },
                        "ws_for_server":{
                            "type":"websocket",
                            "auth":{
                                "anonymous":{
                                    "type":"static",
                                    "role":"server"
                                }
                            }
                        }
                    },
                    "web": {
                        "paths": {
                            "/": {
                                "type": "static",
                                "directory": "../web"
                            }
                        }
                    }
                }
            ]
        }

    ]
}
